      transform: scale(0.8);

      &.visible {
        opacity: 1;
        transform: scale(1);
      }

      &:hover {
        transform: scale(1.02);
      }

      &-img {
        height: 40px;
        width: auto;
        transition: filter $transition-base;

        @include media-md {
          height: 44px;
