---
import Button from './Button.astro';

const navItems = [
  { label: 'Who We Are', href: '#about', icon: 'fa-building' },
  { label: 'What We Do', href: '#services', icon: 'fa-tools' },
  { label: 'Our Work', href: '#portfolio', icon: 'fa-images' },
  { label: 'Our Process', href: '#process', icon: 'fa-list-check' },
  { label: 'Contact', href: '#contact', icon: 'fa-envelope' },
];
---

<header class="header-transparent" id="header-transparent">
  <div class="header-transparent__container">
    <!-- Logo with text for scroll animation (initially hidden) -->
    <a href="#top" class="header-transparent__logo" id="header-logo">
      <img
        src="/assets/branding/reap-logomark.svg"
        alt="Reap Construction"
        class="header-transparent__logo-img"
      />
      <div class="header-transparent__logo-divider"></div>
      <div class="header-transparent__logo-content">
        <span class="header-transparent__logo-text">
          <strong>REAP</strong> CONSTRUCTION
        </span>
        <span class="header-transparent__logo-byline">
          A Reap Capital Company
        </span>
      </div>
    </a>

    <div class="header-transparent__actions">
      <!-- Phone button (hidden when menu open) -->
      <a href="tel:+15551234567" class="header-transparent__phone" id="header-phone">
        <i class="fa-solid fa-phone"></i>
        <span class="header-transparent__phone-number">(555) 123-4567</span>
      </a>

      <!-- Horizontal nav (shown when menu open) -->
      <nav class="header-transparent__horizontal-nav" id="header-horizontal-nav">
        <ul class="header-transparent__horizontal-nav-list">
          {navItems.map((item) => (
            <li class="header-transparent__horizontal-nav-item">
              <a href={item.href} class="header-transparent__horizontal-nav-link">
                <i class={`fa-solid ${item.icon}`}></i>
                <span>{item.label}</span>
              </a>
            </li>
          ))}
        </ul>

        <!-- Social icons (inside nav when visible) -->
        <div class="header-transparent__social">
          <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
            <i class="fa-brands fa-facebook-f"></i>
          </a>
          <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <i class="fa-brands fa-instagram"></i>
          </a>
          <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <i class="fa-brands fa-linkedin-in"></i>
          </a>
        </div>
      </nav>

      <button
        class="header-transparent__mobile-toggle"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
      >
        <span class="header-transparent__mobile-toggle-bar"></span>
        <span class="header-transparent__mobile-toggle-bar"></span>
        <span class="header-transparent__mobile-toggle-bar"></span>
      </button>
    </div>
  </div>
</header>

<style lang="scss">
  @import '../styles/variables';
  @import '../styles/mixins';

  .header-transparent {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding-bottom: 40px; // Extended gradient area
    background: transparent;
    backdrop-filter: blur(0);
    z-index: $z-sticky;
    transform: translateY(-100%);
    opacity: 0;
    transition: transform 0.4s ease, opacity 0.4s ease, background 0.3s ease;

    &__container {
      @include container;
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 80px;
      transition: all $transition-base;
    }

    &__logo {
      display: flex;
      align-items: center;
      gap: $spacing-lg;
      text-decoration: none;
      transition: opacity $transition-base, transform $transition-base;
      opacity: 0;
      transform: scale(0.8);

      &.visible {
        opacity: 1;
        transform: scale(1);
      }

      &:hover {
        transform: scale(1.02);
      }

      &-img {
        height: 40px;
        width: auto;
        transition: filter $transition-base;

        @include media-md {
          height: 44px;
        }
      }

      &-divider {
        display: none;
        width: 1px;
        height: 40px;
        background-color: rgba($color-heritage-green, 0.2);

        @include media-md {
          display: block;
          height: 44px;
        }
      }

      &-content {
        display: none;
        flex-direction: column;
        gap: 2px;

        @include media-md {
          display: flex;
        }
      }

      &-text {
        font-family: $font-display;
        font-size: 1.125rem;
        font-weight: $font-weight-medium;
        color: $color-heritage-green;
        letter-spacing: 0.15em;
        white-space: nowrap;
        line-height: 1.2;

        strong {
          font-weight: 800;
        }

        @include media-md {
          font-size: 1.25rem;
        }
      }

      &-byline {
        font-family: $font-display;
        font-size: 0.65rem;
        font-weight: $font-weight-medium;
        color: rgba($color-heritage-green, 0.5);
        letter-spacing: 0.45em;
        text-transform: uppercase;
        white-space: nowrap;
        line-height: 1;

        @include media-md {
          font-size: 0.7rem;
          letter-spacing: 0.5em;
        }
      }
    }

    &__actions {
      display: flex;
      align-items: center;
      gap: $spacing-lg;
      margin-left: auto;
    }

    &__phone {
      display: flex;
      align-items: center;
      gap: $spacing-sm;
      background-color: $color-heritage-green;
      color: $color-white;
      text-decoration: none;
      font-weight: $font-weight-medium;
      transition: all $transition-fast;
      padding: $spacing-sm $spacing-md;
      border-radius: $border-radius-md;
      font-size: 0.875rem;

      i {
        font-size: 0.875rem;
        color: $color-white;
      }

      &-number {
        display: none;

        @include media-md {
          display: inline;
        }
      }

      &:hover {
        background-color: darken($color-heritage-green, 5%);
        transform: translateY(-1px);
        box-shadow: $shadow-sm;
      }

      &.hidden {
        display: none;
      }
    }

    &__horizontal-nav {
      display: none;
      position: relative;

      &.visible {
        display: flex;
        align-items: center;
        gap: $spacing-md;
        animation: slideInWithGradient 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
      }

      &.closing {
        display: flex;
        align-items: center;
        gap: $spacing-md;
        animation: slideOutWithGradient 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
      }

      &-list {
        display: flex;
        align-items: center;
        gap: $spacing-sm;
        list-style: none;
        padding: 0;
        margin: 0;
      }

      &-item {
        margin: 0;
      }

      &-link {
        display: flex;
        align-items: center;
        gap: $spacing-sm;
        color: $color-heritage-green;
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: $font-weight-medium;
        transition: all $transition-fast;
        padding: $spacing-sm $spacing-md;
        border-radius: $border-radius-md;
        white-space: nowrap;

        i {
          font-size: 0.875rem;
          transition: transform $transition-fast;
        }

        &:hover {
          color: $color-prestige-gold;
          background-color: rgba($color-prestige-gold, 0.1);

          i {
            transform: scale(1.1);
          }
        }

        &.active {
          background-color: $color-heritage-green;
          color: $color-white;
          font-weight: $font-weight-medium;
          transform: translateY(-1px);
          box-shadow: $shadow-sm;

          i {
            color: $color-white;
          }
        }
      }
    }

    // Gradient slide-in animation
    @keyframes slideInWithGradient {
      0% {
        clip-path: inset(0 0 0 100%);
      }
      100% {
        clip-path: inset(0 0 0 0);
      }
    }

    // Gradient slide-out animation
    @keyframes slideOutWithGradient {
      0% {
        clip-path: inset(0 0 0 0);
      }
      100% {
        clip-path: inset(0 0 0 100%);
      }
    }

    &__social {
      display: flex;
      align-items: center;
      gap: $spacing-sm;
      padding-left: $spacing-md;
      border-left: 1px solid rgba($color-heritage-green, 0.15);

      a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background-color: rgba($color-text-light, 0.08);
        color: $color-text-light;
        transition: all $transition-fast;
        font-size: 0.875rem;

        &:hover {
          background-color: $color-heritage-green;
          color: $color-white;
          transform: translateY(-2px);
        }
      }
    }

    &__mobile-toggle {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 4px;
      width: 40px;
      height: 40px;
      padding: 0;
      background: transparent;
      border: none;
      cursor: pointer;

      &-bar {
        width: 24px;
        height: 2px;
        background-color: $color-heritage-green;
        transition: all $transition-fast;
      }

      &[aria-expanded="true"] {
        .header-transparent__mobile-toggle-bar {
          &:nth-child(1) {
            transform: rotate(45deg) translate(5px, 5px);
          }

          &:nth-child(2) {
            opacity: 0;
          }

          &:nth-child(3) {
            transform: rotate(-45deg) translate(5px, -5px);
          }
        }
      }
    }

    // Visible state (when scrolled)
    &--visible {
      transform: translateY(0);
      opacity: 1;
    }

    // Scrolled state
    &--scrolled {
      padding-bottom: 0; // Remove extended gradient when scrolled
      background: rgba($color-white, 0.95);
      backdrop-filter: blur(10px);
      box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);

      .header-transparent__container {
        height: 70px;
      }

      .header-transparent__logo-img {
        height: 38px;

        @include media-md {
          height: 42px;
        }
      }
    }

    // Dark variant (when over light background)
    &--dark {
      .header-transparent__nav-link,
      .header-transparent__mobile-toggle-bar {
        color: $color-white;
        background-color: $color-white;
      }

      .header-transparent__logo-img {
        filter: brightness(0) invert(1);
      }
    }
  }
</style>

<script>
  // Smooth scrolling for navigation links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const targetId = this.getAttribute('href');

      // Handle scroll to top
      if (targetId === '#top') {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
        return;
      }

      if (targetId && targetId !== '#') {
        const targetElement = document.querySelector(targetId);
        if (targetElement) {
          const headerOffset = 80;
          const elementPosition = targetElement.getBoundingClientRect().top;
          const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth'
          });
        }
      }
    });
  });

  // Header scroll behavior with logo animation
  let lastScroll = 0;
  const header = document.getElementById('header-transparent');
  const headerLogo = document.getElementById('header-logo');
  const heroLogo = document.getElementById('hero-logo');

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    // Show header and logo when scrolled down
    if (currentScroll > 150) {
      header?.classList.add('header-transparent--visible');
      header?.classList.add('header-transparent--scrolled');
      headerLogo?.classList.add('visible');
      if (heroLogo) {
        heroLogo.style.opacity = '0';
      }
    } else {
      header?.classList.remove('header-transparent--visible');
      header?.classList.remove('header-transparent--scrolled');
      headerLogo?.classList.remove('visible');
      if (heroLogo) {
        heroLogo.style.opacity = '1';
      }
    }

    lastScroll = currentScroll;
  });

  // Hamburger toggle - only toggles phone/nav, not mobile menu
  const mobileToggle = document.querySelector('.header-transparent__mobile-toggle');
  const headerPhone = document.getElementById('header-phone');
  const horizontalNav = document.getElementById('header-horizontal-nav');

  mobileToggle?.addEventListener('click', () => {
    const isExpanded = mobileToggle.getAttribute('aria-expanded') === 'true';
    mobileToggle.setAttribute('aria-expanded', !isExpanded ? 'true' : 'false');

    // Toggle between phone and horizontal nav
    if (!isExpanded) {
      // Menu opening - hide phone, show nav
      headerPhone?.classList.add('hidden');
      horizontalNav?.classList.remove('closing');
      horizontalNav?.classList.add('visible');
    } else {
      // Menu closing - animate out then show phone
      horizontalNav?.classList.add('closing');
      horizontalNav?.classList.remove('visible');

      // Wait for animation to complete, then show phone
      setTimeout(() => {
        headerPhone?.classList.remove('hidden');
        horizontalNav?.classList.remove('closing');
      }, 400); // Match animation duration
    }
  });

  // Scroll Spy - Highlight active section
  const sections = document.querySelectorAll('section[id]');
  const navLinks = document.querySelectorAll('.header-transparent__horizontal-nav-link');

  function highlightActiveSection() {
    const scrollPosition = window.scrollY + 100; // Offset for header

    sections.forEach(section => {
      const sectionTop = section.offsetTop;
      const sectionHeight = section.offsetHeight;
      const sectionId = section.getAttribute('id');

      if (scrollPosition >= sectionTop && scrollPosition < sectionTop + sectionHeight) {
        // Remove active class from all links
        navLinks.forEach(link => link.classList.remove('active'));

        // Add active class to current section's link
        const activeLink = document.querySelector(`.header-transparent__horizontal-nav-link[href="#${sectionId}"]`);
        if (activeLink) {
          activeLink.classList.add('active');
        }
      }
    });
  }

  // Run on scroll
  window.addEventListener('scroll', highlightActiveSection);

  // Run on page load
  highlightActiveSection();
</script>