---
import Button from './Button.astro';

const navItems = [
  { label: 'Who We Are', href: '#about', icon: 'fa-building', description: 'Learn about our story and values' },
  { label: 'What We Do', href: '#services', icon: 'fa-tools', description: 'Explore our construction services' },
  { label: 'Our Work', href: '#portfolio', icon: 'fa-images', description: 'View our completed projects' },
  { label: 'Our Process', href: '#process', icon: 'fa-list-check', description: 'Discover how we build' },
  { label: 'Contact', href: '#contact', icon: 'fa-envelope', description: 'Get in touch with our team' },
];
---

<header class="header-transparent" id="header-transparent">
  <div class="header-transparent__container">
    <!-- Logo with text for scroll animation (initially hidden) -->
    <a href="#top" class="header-transparent__logo" id="header-logo">
      <img
        src="/assets/branding/reap-logomark.svg"
        alt="Reap Construction"
        class="header-transparent__logo-img"
      />
      <div class="header-transparent__logo-divider"></div>
      <div class="header-transparent__logo-content">
        <span class="header-transparent__logo-text">
          <strong>REAP</strong> CONSTRUCTION
        </span>
        <span class="header-transparent__logo-byline">
          A Reap Capital Company
        </span>
      </div>
    </a>

    <div class="header-transparent__actions">
      <!-- Phone button (hidden when menu open) -->
      <a href="tel:+15551234567" class="header-transparent__phone" id="header-phone">
        <i class="fa-solid fa-phone"></i>
        <span class="header-transparent__phone-number">(555) 123-4567</span>
      </a>

      <!-- Horizontal nav (shown when menu open) -->
      <nav class="header-transparent__horizontal-nav" id="header-horizontal-nav">
        <ul class="header-transparent__horizontal-nav-list">
          {navItems.map((item) => (
            <li class="header-transparent__horizontal-nav-item">
              <a href={item.href} class="header-transparent__horizontal-nav-link">
                <i class={`fa-solid ${item.icon}`}></i>
                <span>{item.label}</span>
              </a>
            </li>
          ))}
        </ul>

        <!-- Social icons (inside nav when visible) -->
        <div class="header-transparent__social">
          <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
            <i class="fa-brands fa-facebook-f"></i>
          </a>
          <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <i class="fa-brands fa-instagram"></i>
          </a>
          <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <i class="fa-brands fa-linkedin-in"></i>
          </a>
        </div>
      </nav>

      <button
        class="header-transparent__mobile-toggle"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
      >
        <span class="header-transparent__mobile-toggle-bar"></span>
        <span class="header-transparent__mobile-toggle-bar"></span>
        <span class="header-transparent__mobile-toggle-bar"></span>
      </button>
    </div>
  </div>
</header>

<!-- Full-screen mobile menu overlay -->
<div class="mobile-menu" id="mobile-menu" role="dialog" aria-modal="true" aria-labelledby="mobile-menu-title">
  <div class="mobile-menu__overlay"></div>
  <div class="mobile-menu__content">
    <div class="mobile-menu__header">
      <h2 id="mobile-menu-title" class="sr-only">Navigation Menu</h2>

      <a href="#top" class="mobile-menu__logo">
        <img
          src="/assets/branding/reap-logomark.svg"
          alt="Reap Construction"
          class="mobile-menu__logo-img"
        />
        <div class="mobile-menu__logo-divider"></div>
        <div class="mobile-menu__logo-content">
          <span class="mobile-menu__logo-text">
            <strong>REAP</strong> CONSTRUCTION
          </span>
          <span class="mobile-menu__logo-byline">
            A Reap Capital Company
          </span>
        </div>
      </a>

      <button
        class="mobile-menu__close"
        aria-label="Close navigation menu"
        id="mobile-menu-close"
      >
        <i class="fa-solid fa-xmark"></i>
      </button>
    </div>

    <nav class="mobile-menu__nav">
      <ul class="mobile-menu__list">
        {navItems.map((item) => (
          <li class="mobile-menu__item">
            <a href={item.href} class="mobile-menu__link">
              <div class="mobile-menu__link-icon">
                <i class={`fa-solid ${item.icon}`}></i>
              </div>
              <div class="mobile-menu__link-content">
                <span class="mobile-menu__link-label">{item.label}</span>
                <span class="mobile-menu__link-description">{item.description}</span>
              </div>
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <div class="mobile-menu__footer">
      <a href="tel:+15551234567" class="mobile-menu__phone">
        <i class="fa-solid fa-phone"></i>
        <span>(555) 123-4567</span>
      </a>

      <div class="mobile-menu__social">
        <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
          <i class="fa-brands fa-facebook-f"></i>
        </a>
        <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
          <i class="fa-brands fa-instagram"></i>
        </a>
        <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
          <i class="fa-brands fa-linkedin-in"></i>
        </a>
      </div>
    </div>
  </div>
</div>

