---
export interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'small' | 'medium' | 'large';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
  disabled?: boolean;
  loading?: boolean;
  block?: boolean;
  icon?: boolean;
  onClick?: string;
}

const {
  variant = 'primary',
  size = 'medium',
  href,
  type = 'button',
  class: className = '',
  disabled = false,
  loading = false,
  block = false,
  icon = false,
  onClick,
  ...rest
} = Astro.props;

const Tag = href ? 'a' : 'button';

const classes = [
  'btn',
  `btn--${variant}`,
  size !== 'medium' && `btn--${size}`,
  block && 'btn--block',
  icon && 'btn--icon',
  loading && 'btn--loading',
  className
].filter(Boolean).join(' ');

const attributes = {
  class: classes,
  ...(Tag === 'a' ? { href } : { type, disabled: disabled || loading }),
  ...(onClick && { onclick: onClick }),
  ...rest
};
---

<Tag {...attributes}>
  <slot />
</Tag>

<style lang="scss">
  @import '../styles/components/buttons.scss';
</style>