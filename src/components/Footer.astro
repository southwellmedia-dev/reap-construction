---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { label: 'Services', href: '#services' },
  { label: 'Portfolio', href: '#portfolio' },
  { label: 'About', href: '#about' },
  { label: 'Contact', href: '#contact' },
];

const contactInfo = {
  phone: '(555) 123-4567',
  email: 'info@reapconstruction.com',
  address: '123 Construction Way, Building City, BC 12345'
};
---

<footer class="footer">
  <div class="footer__container">
    <div class="footer__content">
      <!-- Company Info -->
      <div class="footer__section footer__section--company">
        <div class="footer__logo">
          <img
            src="/assets/branding/reap-logomark.svg"
            alt="Reap Construction"
            class="footer__logo-img"
          />
        </div>
        <p class="footer__tagline">
          Building with Vision. Executing with Precision.
        </p>
        <p class="footer__description">
          A subsidiary of <a href="https://reapcapital.com" class="footer__link footer__link--gold">Reap Capital</a>,
          delivering premier commercial and residential construction services.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="footer__section footer__section--links">
        <h3 class="footer__heading">Quick Links</h3>
        <ul class="footer__list">
          {quickLinks.map((link) => (
            <li class="footer__list-item">
              <a href={link.href} class="footer__link">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="footer__section footer__section--contact">
        <h3 class="footer__heading">Contact Us</h3>
        <div class="footer__contact-item">
          <svg class="footer__icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
          <a href={`tel:${contactInfo.phone.replace(/\D/g, '')}`} class="footer__link">
            {contactInfo.phone}
          </a>
        </div>
        <div class="footer__contact-item">
          <svg class="footer__icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          <a href={`mailto:${contactInfo.email}`} class="footer__link">
            {contactInfo.email}
          </a>
        </div>
        <div class="footer__contact-item">
          <svg class="footer__icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          <span class="footer__text">{contactInfo.address}</span>
        </div>
      </div>

      <!-- Social Links -->
      <div class="footer__section footer__section--social">
        <h3 class="footer__heading">Follow Us</h3>
        <div class="footer__social">
          <a href="#" class="footer__social-link" aria-label="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a href="#" class="footer__social-link" aria-label="Facebook">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
            </svg>
          </a>
          <a href="#" class="footer__social-link" aria-label="Instagram">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1 1 12.324 0 6.162 6.162 0 0 1-12.324 0zm6.162 4.162a4.162 4.162 0 1 1 0-8.324 4.162 4.162 0 0 1 0 8.324zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <div class="footer__bottom">
      <div class="footer__bottom-content">
        <p class="footer__copyright">
          Â© {currentYear} Reap Construction. All rights reserved.
        </p>
        <div class="footer__legal">
          <a href="/privacy" class="footer__link">Privacy Policy</a>
          <span class="footer__separator">|</span>
          <a href="/terms" class="footer__link">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style lang="scss">
  @import '../styles/variables';
  @import '../styles/mixins';

  .footer {
    background-color: $color-heritage-green;
    color: $color-text-inverse;
    padding-top: $spacing-4xl;

    &__container {
      @include container;
    }

    &__content {
      display: grid;
      grid-template-columns: 1fr;
      gap: $spacing-2xl;
      padding-bottom: $spacing-3xl;

      @include media-md {
        grid-template-columns: repeat(2, 1fr);
      }

      @include media-lg {
        grid-template-columns: 2fr 1fr 1.5fr 1fr;
      }
    }

    &__section {
      &--company {
        @include media-lg {
          padding-right: $spacing-2xl;
        }
      }
    }

    &__logo {
      margin-bottom: $spacing-lg;

      &-img {
        height: 60px;
        width: auto;
        filter: brightness(0) invert(1); // Make SVG white on dark background
      }
    }

    &__tagline {
      font-size: 1rem;
      font-weight: $font-weight-medium;
      margin-bottom: $spacing-md;
      color: $color-prestige-gold;
    }

    &__description {
      font-size: 0.875rem;
      line-height: $line-height-relaxed;
      color: rgba($color-white, 0.8);
    }

    &__heading {
      font-size: 1rem;
      font-weight: $font-weight-semibold;
      margin-bottom: $spacing-lg;
      color: $color-white;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    &__list {
      list-style: none;
      padding: 0;
      margin: 0;

      &-item {
        margin-bottom: $spacing-sm;
      }
    }

    &__link {
      color: rgba($color-white, 0.8);
      text-decoration: none;
      font-size: 0.875rem;
      transition: color $transition-fast;

      &:hover {
        color: $color-prestige-gold;
      }

      &--gold {
        color: $color-prestige-gold;

        &:hover {
          color: lighten($color-prestige-gold, 15%);
        }
      }
    }

    &__contact-item {
      display: flex;
      align-items: center;
      gap: $spacing-sm;
      margin-bottom: $spacing-md;
      font-size: 0.875rem;
    }

    &__icon {
      color: $color-prestige-gold;
      flex-shrink: 0;
    }

    &__text {
      color: rgba($color-white, 0.8);
      font-size: 0.875rem;
    }

    &__social {
      display: flex;
      gap: $spacing-md;

      &-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: $border-radius-sm;
        background-color: rgba($color-white, 0.1);
        color: $color-white;
        transition: all $transition-fast;

        &:hover {
          background-color: $color-prestige-gold;
          transform: translateY(-2px);
        }
      }
    }

    &__bottom {
      border-top: 1px solid rgba($color-white, 0.1);
      padding: $spacing-xl 0;

      &-content {
        display: flex;
        flex-direction: column;
        gap: $spacing-md;
        align-items: center;
        text-align: center;

        @include media-md {
          flex-direction: row;
          justify-content: space-between;
          text-align: left;
        }
      }
    }

    &__copyright {
      font-size: 0.875rem;
      color: rgba($color-white, 0.6);
      margin: 0;
    }

    &__legal {
      display: flex;
      gap: $spacing-md;
      align-items: center;
      font-size: 0.875rem;
    }

    &__separator {
      color: rgba($color-white, 0.3);
    }
  }
</style>