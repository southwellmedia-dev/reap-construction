---
import Button from '../components/Button.astro';
import { Image } from 'astro:assets';

// Using Bryant project image as hero background for variety
const heroImage = '/assets/projects/bryant/1755615602011.jpg';
---

<section class="hero" id="hero">
  <div class="hero__background">
    <img
      src={heroImage}
      alt="Premium construction project"
      class="hero__image"
      loading="eager"
    />
    <div class="hero__overlay"></div>
  </div>

  <div class="hero__container">
    <div class="hero__content">
      <h1 class="hero__title">
        Building with Vision.
        <span class="hero__title-accent">Executing with Precision.</span>
      </h1>

      <p class="hero__subtitle">
        Premier commercial and residential construction services for the discerning client.
      </p>

      <div class="hero__actions">
        <Button href="#portfolio" variant="primary" size="large" icon>
          View Our Work
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </Button>
        <Button href="#contact" variant="outline" class="btn--outline-light" size="large">
          Request Consultation
        </Button>
      </div>

      <div class="hero__stats">
        <div class="hero__stat">
          <span class="hero__stat-value">15+</span>
          <span class="hero__stat-label">Years Experience</span>
        </div>
        <div class="hero__stat">
          <span class="hero__stat-value">200+</span>
          <span class="hero__stat-label">Projects Completed</span>
        </div>
        <div class="hero__stat">
          <span class="hero__stat-value">100%</span>
          <span class="hero__stat-label">Client Satisfaction</span>
        </div>
      </div>
    </div>
  </div>

  <div class="hero__scroll">
    <span class="hero__scroll-text">Scroll to explore</span>
    <svg class="hero__scroll-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="12" y1="5" x2="12" y2="19"></line>
      <polyline points="19 12 12 19 5 12"></polyline>
    </svg>
  </div>
</section>

<style lang="scss">
  @import '../styles/variables';
  @import '../styles/mixins';

  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;

    &__background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }

    &__image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }

    &__overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        to bottom,
        rgba($color-heritage-green, 0.3) 0%,
        rgba($color-heritage-green, 0.5) 40%,
        rgba($color-heritage-green, 0.8) 70%,
        rgba($color-heritage-green, 0.95) 100%
      );
    }

    &__container {
      @include container;
      padding-top: 100px; // Account for fixed header
      position: relative;
      z-index: 1;
    }

    &__content {
      max-width: 900px;
      animation: fadeInUp 1s ease-out;
    }

    &__title {
      font-size: $font-size-hero;
      font-family: $font-display;
      font-weight: $font-weight-bold;
      line-height: $line-height-tight;
      color: $color-white;
      margin-bottom: $spacing-xl;

      &-accent {
        display: block;
        color: $color-prestige-gold;
        margin-top: $spacing-sm;
      }
    }

    &__subtitle {
      font-size: clamp(1.125rem, 2vw, 1.5rem);
      line-height: $line-height-relaxed;
      color: rgba($color-white, 0.9);
      margin-bottom: $spacing-2xl;
      max-width: 600px;
    }

    &__actions {
      display: flex;
      flex-wrap: wrap;
      gap: $spacing-lg;
      margin-bottom: $spacing-4xl;

      @include media-md {
        flex-wrap: nowrap;
      }
    }

    &__stats {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: $spacing-lg;
      padding-top: $spacing-2xl;
      border-top: 1px solid rgba($color-white, 0.2);

      @include media-sm {
        gap: $spacing-xl;
      }

      @include media-md {
        max-width: 500px;
        grid-template-columns: repeat(3, 1fr);
      }
    }

    &__stat {
      display: flex;
      flex-direction: column;
      gap: $spacing-xs;
      min-width: 0; // Prevent overflow

      &-value {
        font-size: clamp(1.25rem, 3vw, 2rem);
        font-weight: $font-weight-bold;
        color: $color-prestige-gold;
        white-space: nowrap;
      }

      &-label {
        font-size: clamp(0.75rem, 1vw, 0.875rem);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: rgba($color-white, 0.7);
        line-height: 1.2;
      }
    }

    &__scroll {
      position: absolute;
      bottom: $spacing-2xl;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: $spacing-sm;
      color: $color-white;
      animation: bounce 2s infinite;

      &-text {
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        opacity: 0.7;
      }

      &-icon {
        opacity: 0.7;
      }
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }
</style>